{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "title": {
          "type": "title",
          "settings": {
            "title_text_size": 48
          }
        },
        "description": {
          "type": "description",
          "settings": {
            "style": "paragraph"
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "variant_popup_option": "Size",
            "variant_popup_text": "Size guide",
            "variant_popup_page": ""
          }
        }
      },
      "block_order": [
        "title",
        "description",
        "variant_picker"
      ],
      "custom_css": [
        ".product__meta {padding-left: 0 !important; align-self: center;}",
        ".product__description {margin-top: 25px;}"
      ],
      "settings": {
        "enable_animation": true,
        "enable_full_width": false,
        "image_size": "65",
        "enable_thumbnails": true,
        "thumbnail_position": "vertical",
        "thumbnail_size": "medium",
        "thumbnail_aspect_ratio": "square",
        "enable_video_looping": true
      }
    }
  },
  "order": [
    "main"
  ]
}
